<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AnimatedPB">

        <!--Progress Styling        -->
        <attr name="progressColor" format="color" />
        <attr name="progressHeight" format="integer" />
        <attr name="progressWidth" format="integer" />
        <attr name="progressCornerRadius" format="integer" />
        <attr name="progressMarginTop" format="integer" />
        <attr name="progressMarginLeft" format="integer" />
        <attr name="progressMarginBottom" format="integer" />
        <attr name="progressMarginRight" format="integer" />


        <!--Progress Attributes        -->
        <attr name="barLabel" format="string" />
        <attr name="labelColor" format="color" />
        <attr name="labelTextSize" format="integer" />
        <attr name="valueColor" format="color" />

        <attr name="progress" format="float" />
        <attr name="minValue" format="float" />
        <attr name="maxValue" format="float" />
        <attr name="animDurationMillis" format="integer" />

        <!--Container Styling        -->
        <attr name="containerColor" format="color" />
        <attr name="containerHeight" format="integer" />
        <attr name="containerWidth" format="integer" />
        <attr name="progressContainer" format="float" />
        <attr name="containerCornerRadius" format="integer" />


        <!-- animation type Option       -->
        <attr name="animationType" format="enum">
            <enum name="linear" value="0" />
            <enum name="ease_out" value="1" />
            <enum name="ease_in" value="2" />
            <enum name="bounce" value="3" />

        </attr>

        <!-- Shape Option       -->
        <attr name="barShape" format="enum">
            <enum name="poll" value="0" />
            <enum name="circle" value="1" />
        </attr>

        <!-- Value Desplay Option       -->
        <attr name="valueToDisplay" format="enum">
            <enum name="number" value="0" />
            <enum name="percentage" value="1" />
            <enum name="none" value="2" />
        </attr>



    </declare-styleable>
</resources>